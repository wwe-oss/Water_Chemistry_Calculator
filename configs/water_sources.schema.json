                            "tap",
                            "distilled",
                            "di",
                            "ro",
                            "rain",
                            "stored",
                            "purchased",
                            "other"
                        ]
                    },
                    "baseline": {
                        "type": "object",
                        "properties": {
                            "ph": {
                                "type": [
                                    "number",
                                    "null"
